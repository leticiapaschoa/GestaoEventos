@using ProjetoEventos.Enum
@model ProjetoEventos.Models.Evento
@{
    ViewBag.Title = "Home Page";
}
<html>
<head>
    @section Scripts{
    <script>
        $(document).ready(function () {
            $("#cep").change(function () {
                cep = $("#cep").val();
                url = "https://viacep.com.br/ws/" + cep + "/json";
                $.get(url, function (data, status) {
                    $("#rua").val(data.logradouro);
                }, "json");
            });
        });
    </script>
}
</head>
<body>
    @{
        Html.RenderPartial("_Menu");
    }

    <form id="cadastroEvento">

        <table style="width:100%">
            <tr>
                <td id="cpf">
                    <label for="cpf">CPF: </label>
                    <input type="text" id="cpf" required="required" name="cpf" />
                    <button onclick="document.getElementById('idBuscaCliente').style.display='block'" style="width:auto;" target="_blank" id="Search" type="submit"><img src="~/Img/Icon/findClient.png" /></button>
                </td>
                <td id="nome">
                    <label for="nome">Nome: </label>
                    <input type="text" id="nomeid" required="required" name="nome" />                    
                </td>
                
            </tr>

            <tr>
                <td id="tipoEvento">
                    <label for="tipo">Evento: </label>
                    @Html.DropDownList("type", EnumHelper.GetSelectList(typeof(ProjetoEventos.Enum.ETiposEvento)), "Selecione o tipo do evento")
                </td>

                <td id="dataEvento">
                    <label for="data">Data:</label>
                    <input type="date" name="data" min="2018-10-01" max="2070-01-01">
                </td>

                <td id="qntConvidados">
                    <label for="qnt">Nro. Convidados:</label>
                    <input type="number" id="qnt" name="qnt" />
                </td>
            </tr>

            <tr>
                <td id="cep_table">
                    <label for="cep">CEP:</label>
                    <input type="text" id="cep" required="required" name="cep" />
                </td>
                <td id="rua_table">
                    <label for="cep">Rua:</label>
                    <input type="text" id="rua" required="required" name="rua" />
                </td>

                <td id="nro">
                    <label for="cep">Número:</label>
                    <input type="number" id="nro" name="nro" />
                </td>
            </tr>

            <tr>
                <td>
                    <p>Selecione os serviços desejados:</p>
                    @foreach (var value in Enum.GetValues(typeof(EServicos)))
                    {
                        var name = Enum.GetName(typeof(EServicos), value);
                        <input type="checkbox" id="dayofweek" name="dayofweek" value=@name />
                        <label for="dayofweek">@name</label><br>                    
                    }
                </td>
            </tr>
        </table>

        <button id="cadastrarEvento" type="submit">Agendar evento</button>

    </form>




    <div id="idBuscaCliente" class="modal">
        <form class="modal-content animate" action="" method="post">
            <div class="imgcontainer">
                <span onclick="document.getElementById('idBuscaCliente').style.display='none'" class="close" title="Close Modal">&times;</span>
            </div>
            <div class="container">
                <label for="usuario" class="txt"><b>Username</b></label><br>
                <input type="text" placeholder="Enter Username" name="usuario" required>
                <br>
                <label for="senha" class="txt"><b>Password</b></label><br>
                <input type="password" placeholder="Enter Password" name="senha" required>
                <button type="submit">Login</button>
            </div>
        </form>
    </div>


</body>
</html>